#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
    Node(int val) : data(val), next(nullptr) {}
};

int josephus(int n, int k) {
    Node* head = new Node(1);
    Node* prev = head;
    for (int i = 2; i <= n; i++) {
        prev->next = new Node(i);
        prev = prev->next;
    }
    prev->next = head;

    Node* ptr = head;
    Node* prev_ptr = prev;
    while (ptr != ptr->next) {
        for (int count = 1; count < k; count++) {
            prev_ptr = ptr;
            ptr = ptr->next;
        }
        prev_ptr->next = ptr->next;
        delete ptr;
        ptr = prev_ptr->next;
    }
    int result = ptr->data;
    delete ptr;
    return result;
}

int main() {
    int N = 7, K = 3;
    cout << josephus(N, K) << endl;
    return 0;
}
